<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/kms7530.notier"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    tools:context=".SelectContectDialog" >

    <ListView
        android:id="@+id/listContect"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:divider="#00000000"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:smoothScrollbar="true" >

    </ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/listContect" >

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btnContectOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="whatIs"
            android:text="확인"
            app:bb_icon_left="fa-check"
            app:bb_roundedCorners="true"
            app:bb_type="success" >

        </com.beardedhen.androidbootstrap.BootstrapButton>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btnShowContect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="whatIs"
            android:text="추가"
            app:bb_icon_left="fa-plus"
            app:bb_roundedCorners="true"
            app:bb_type="info" >

        </com.beardedhen.androidbootstrap.BootstrapButton>

    </LinearLayout>

</RelativeLayout>
